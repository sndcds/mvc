{
  "name": "@sndcds/mvc",
  "version": "0.0.9",
  "private": false,
  "description": "Experimental Generative MVC Library",
  "module": "src/index.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sndcds/mvc.git"
  },
  "files": [
    "src/lib",
    "src/index.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "library",
    "framework",
    "reactive",
    "mvc",
    "js",
    "es6",
    "view",
    "controller",
    "model",
    "web-framework",
    "lightweight-mvc-framework",
    "generative",
    "javascript"
  ],
  "author": "Roald Christesen",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/sndcds/mvc/issues"
  },
  "homepage": "https://soundcodes.grain.one",
  "source": "src/example/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "start": "pnpm clean && parcel serve",
    "publish": "npm publish --access=public",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "preinstall": "cp scripts/* .git/hooks/ && chmod +x .git/hooks/post-commit .git/hooks/pre-commit",
    "clean": "rm -rf dist .parcel-cache ./node_modules",
    "build": "pnpm clean && parcel build --public-url '.'",
    "lint": "pnpm exec eslint src"
  },
  "staticFiles": {
    "staticPath": "static"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.9.3",
    "eslint": "8.50.0",
    "parcel": "latest",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.3.3"
  }
}
